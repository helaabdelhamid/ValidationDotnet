    <!-- COMMON SCRIPTS -->
    <script src="/html_menu_1/js/jquery-2.2.4.min.js"></script>
    <script src="/html_menu_1/js/common_scripts.min.js"></script>
    <script src="/html_menu_1/js/functions.js"></script>

