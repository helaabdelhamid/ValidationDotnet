<body>
    <div class="layer"></div>
    <!-- Mobile menu overlay mask -->
    <div id="preloader">
        <div data-loader="circle-side"></div>
    </div>
    <!-- End Preload -->
    <header class="header_sticky">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-6">
                    <div id="logo_home">
                        <h1><a href="index.html" title="Findoctor">Findoctor</a></h1>
                    </div>
                </div>
                <nav class="col-lg-9 col-6">
                    <a class="cmn-toggle-switch cmn-toggle-switch__htx open_close" href="#0"><span>Menu mobile</span></a>
                    <ul id="top_access">
                        <li><a href="/Account/SmartLogin"><i class="pe-7s-user"></i></a></li>
                        <li><a href="/Account/SmartRegister"><i class="pe-7s-add-user"></i></a></li>
                    </ul>
                    <div class="main-menu">
                        <ul>
                           
                            <li class="submenu">
                                
                                    @if (Request.IsAuthenticated)
                                    {
                                        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                        {
                                            @Html.AntiForgeryToken()



                                            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })



                                        }
                                    }
                                    
                        </li>
                        <li><a href="javascript:document.getElementById('logoutForm').submit()" class="show-submenu" data-close="true">logout</a></li>
                       </ul>
                    </div>
                    <!-- /main-menu -->
                </nav>
            </div>
        </div>
        <!-- /container -->
    </header>
    <!-- /header -->

    <main>
        <div class="header-video">
            <div id="hero_video">
                <div class="content">
                    <h3>Find a Doctor!</h3>
                    <p>
                        Ridiculus sociosqu cursus neque cursus curae ante scelerisque vehicula.
                    </p>
                    <form method="post" action="list.html">
                        <div id="custom-search-input">
                            <div class="input-group">
                                <input type="text" class=" search-query" placeholder="Ex. Name, Specialization ....">
                                <input type="submit" class="btn_search" value="Search">
                            </div>
                            <ul>
                                <li>
                                    <input type="radio" id="all" name="radio_search" value="all" checked>
                                    <label for="all">All</label>
                                </li>
                                <li>
                                    <input type="radio" id="doctor" name="radio_search" value="doctor">
                                    <label for="doctor">Doctor</label>
                                </li>
                                <li>
                                    <input type="radio" id="clinic" name="radio_search" value="clinic">
                                    <label for="clinic">Clinic</label>
                                </li>
                            </ul>
                        </div>
                    </form>
                </div>
            </div>
            <img src="/html_menu_1/img/video_fix.png" alt="" class="header-video--media" data-video-src="/html_menu_1/video/intro" data-teaser-source="/html_menu_1/video/intro" data-provider="" data-video-width="1920" data-video-height="750">
        </div>
